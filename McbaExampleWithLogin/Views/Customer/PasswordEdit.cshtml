@using McbaExampleWithLogin.Models
@model Customer
@{
    ViewData["Title"] = "Deposit";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="PasswordEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Password" class="control-label">Password:</label>
                <input id="Password" name="Password" class="form-control"
                    data-val="true" data-val-required="The Password field is required." />
                @Html.ValidationMessage("Password", new { @class = "text-danger" })
                <label for="PasswordConfirm" class="control-label">Password Confirmation:</label>
                <input id="PasswordConfirm" name="PasswordConfirm" class="form-control"/>
                @Html.ValidationMessage("PasswordConfirm", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Accounts</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
