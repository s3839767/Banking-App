@using McbaExampleWithLogin.Models
@model Account
@{
    ViewData["Title"] = "Transfer";
}

<h1 class="display-4">Account Number @Model.AccountNumber (@Model.AccountType) - Transfer</h1>
<h4>Balance: $@Model.Balance</h4>

<div class="row">
    <br /><br />
    <div class="col-md-4">
        <form asp-action="Transfer">
            <label for="Amount" class="control-label">Amount:</label>
                <input id="Amount" name="Amount" class="form-control" value="@ViewBag.Amount?.ToString("0.00")"
                    data-val="true" data-val-number="The field Amount must be a number."
                    data-val-required="The Amount field is required." />
                @Html.ValidationMessage("Amount", new { @class = "text-danger" })
                <br />
           <label for="idTo" class="control-label">To Account number:</label>
                <input id="idTo" name="idTo" class="form-control" value="@ViewBag.idTo?.ToString("")"
                    data-val="true" data-val-number="The field Account Number must be a number."
                    data-val-required="The Account Number field is required." />
                @Html.ValidationMessage("idTo", new { @class = "text-danger" })
                <br />
            <label for="Comment" class="control-label">Comment (optional):</label>
                <input id="Comment" name="Comment" class="form-control"/>
                @Html.ValidationMessage("Comment", new { @class = "text-danger" })
                <br />
            <div class="form-group">
                <input type="submit" value="Transfer" class="btn btn-primary"/>
            @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
            </div>
      </form> 
    </div>
</div>

<div>
    <a asp-action="Index">Back to Accounts</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
